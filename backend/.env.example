# Replace placeholder values (<...>) with real secrets before deploying
NODE_ENV=production
PORT=3000
API_BASE_URL=https://api.example.com

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=accounting_db
DB_USER=postgres
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
DB_SSL=false
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public # requires dotenv-expand or manual substitution

# JWT & Auth
JWT_SECRET=REPLACE_WITH_STRONG_JWT_SECRET
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# CORS & Security
CORS_ORIGIN=https://app.example.com
LOG_LEVEL=info
LOG_FORMAT=json
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# SMTP (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp-user
SMTP_PASSWORD=smtp-password
SMTP_FROM=noreply@example.com

# File upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,xlsx,csv,jpg,png
